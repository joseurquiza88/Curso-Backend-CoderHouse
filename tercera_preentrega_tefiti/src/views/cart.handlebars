<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito de compras</title>
</head>
<div class="container mt-5">
  <h1>Carritos de Compras</h1>

  <div class="row">
    {{#each carts}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Carrito {{this._id}}</h2>
            <button type="button" class="btn btn-secondary button-finish-purchase"  id="{{this._id}}"> Finalizar compra</button>
   
            <ul class="list-group">
              {{#each products}}
                <li class="list-group-item">
                  <h5 class="card-subtitle mb-2 text-muted">Id del producto: {{this._id}}</h5>
                  <p class="card-text">Nombre: {{products.name}}</p>
                  <p class="card-text">Precio: {{products.price}}</p>
                  <p class="card-text">Cantidad: {{products.quantity}}</p>
                </li>
              {{/each}}
            </ul>
            <h2 class="card-title">total {{this.total}}</h2>

            {{#unless this.products.length}}
              <p class="mt-3">Carrito vacio</p>
            {{/unless}}

            
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

